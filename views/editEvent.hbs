<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>

      $(document).ready(() => {
        $("#submit").click((event)=>{
          let ename=$('#ename').attr("value");
            $.ajax({
            url:"/editEvent",
            method:"POST",
            dataType:"text",
            data:{
              description:$('#description').val(),
              eventName:$('#ename').val(),
              maxNoOfTicket:$('#maxNoOfTicket').val(),
              stime:$('#stime').val(),
              eetime:$('#eetime').val(),
              cost:$('#cost').val()
            },
            success:function(response){
              let data = JSON.parse(response);
              alert(data[0].message);
              if(data[0].message == "updated event successfully!")
              {
                window.location.href = "/adminHome";
              }


            }
            });


          });
        });

  
    </script>
    <style>

      .bs-example{
        margin-top: 50px;
        margin-left: 300px;
        width: 790px;
       height: 500px;
       
        border: 1px solid #fff; 
        border-radius: 20px; 
        padding:30px;
        background-color: rgb(140, 240, 198);
      }
      .btn{
        width: 100px;
        position: absolute;
        left: 320px; 
      }
      #back{
        position: absolute;
        top:30px;
        left:50px;
      }
      .topnav {
        overflow: hidden;
        background-color: #333;
      }

      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .topnav a.active {
        background-color: #4CAF50;
        color: white;
      }

      .topnav-right {
        float: right;
      }
  </style>
  </head>


<body>
  <div class="topnav">
    <a class="active" href="#home"><i>WELCOME TO EVENT MANAGEMNET SYSTEM </i></a>
    <div class="topnav-right">
    
      <a href="/editingToHome">HOME</a>
      <a href="/adminLogin">LOGOUT</a>
    </div>
  </div>
  <h2 style = "text-align:  center;color:green">EDITING EVENT DETAILS</h2>
    <div class="bs-example">
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label"><strong>Event Name</strong></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="ename" placeholder="Eventname"name="ename" value="{{eventName}}"  disabled="true">
          </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label"><strong>Description</strong></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="description" placeholder="description"name="description" value="{{description}}"  required>
          </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label"><strong>Total Ticket</strong></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="maxNoOfTicket" placeholder="No Of Ticket"name="maxNoOfTicket" value ="{{tickets}}"  required>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label"><strong>Booking start time</strong></label>
          <div class="col-sm-10">
            <input type="datetime-local" class="form-control" id="stime" placeholder="booking start time"value="{{bookingStartTime}}" name = "stime">
          </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label"><strong>Booking end time</strong></label>
        <div class="col-sm-10">
          <input type="datetime-local" class="form-control" id="eetime" placeholder="booking end time"  value="{{bookingEndTime}}"name="eetime">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label"><strong>Ticket cost</strong></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="cost" placeholder="cost"value="{{cost}}" name="cost" required>
          </div>
      </div>
      <div class="form-group row">
        <div class="btn">
          <button type="submit" class="btn btn-primary" id="submit"name = "submit">EDIT</button>
        </div>
      </div>
    </table>
  </div>

</body>
</html>
